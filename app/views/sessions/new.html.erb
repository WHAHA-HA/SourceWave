<div class='revive_top_nav_header_container'>
	<div class='revive_top_nav_logo text-center'>
		<a class="navbar-brand" href="/">REVâš•VE</a>
	</div>
</div>



<div class="login_form_container">
	
	
	<% if params['reactivate'].to_s == 'true' %>
		<h2 class='text-center'>Enter Your Email and Password To Begin Trial Reactivation</h2>
	<% else %>
		<h1 class='text-center'>Log In</h1>
	<% end %>
	
	<%= form_tag sessions_path do%>
		<%= hidden_field_tag "params", params %>
		<div class="field_container">
			
			<div class="field_label">
				<%= label_tag :email %>
			</div>
			
			<div class="field">
				<%= text_field_tag :email, '', class: "form-control" %>
			</div>
			
		</div>

		<div class="field_container">
			
			<div class="field_label">
				<%= label_tag :password %>
			</div>
			
			<div class="field">
				<%= password_field_tag :password, '', class: "form-control" %>
			</div>
			
		</div>
		
		<div class="field_container text-center pink_form_submit_btn_container">
			
			<div class="field_label">
				<%= submit_tag "Login to Source Revive", class: 'btn pink_form_submit_btn' %>
			</div>
			
		</div>
		
		<span class="or-rule">
			<div class="or-rule-before"></div>
				<%= link_to "Forgot Password", new_password_reset_path %>
			<div class="or-rule-after"></div>
		</span>
		


		<div class="btn-block free_uni_btn">
			<%= link_to "Create an Account", signup_path, class: 'btn btn-lg btn-block btn-success free_uni_btn_link' %>
		</div>
		
	<% end %>
	
</div>