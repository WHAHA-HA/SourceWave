<div class="container-fluid container_section">
	
		<div class="row">
		
			<div class="col-xs-12">
			
				<div class="row">
					
					<div class="panel panel-default">
						<div class="panel-heading panel_blue_heading panel_glyph_container">
							
							<div class="header_glyph">
								<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
							</div>
							<div class="header_text">
								<p>Sites</p>
							</div>
							
						</div>
						<div class="panel-body">
							
							<table class="table table-hover table-striped">
								
								<thead>
									<tr>
										<!-- <th></th> -->
										<th>SITE</th>
										<th class="text-center">URLS</th>
										<th class="text-center">BROKEN</th>
										<th class="text-center">EXPIRED</th>
										<th class="text-center">GATHERING</th>
										<th class="text-center">PROCESSING</th>
									</tr>
								</thead>
								
								<tbody>
									
									<% @sites.each do |s| %>
										
										<tr>
											<!-- <td>
												<span class="glyphicon glyphicon-trash glyph_pink" aria-hidden="true"></span>
												<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
											</td> -->
											<td><%= s.base_url %></td>
											<td class="text-center"><%= s.total_urls_found.to_i %></td>
											<td class="text-center"><%= s.total_broken.to_i %></td>
											<td class="text-center"><%= s.total_expired.to_i %></td>
											<td class="text-center"><%= s.gather_status.to_s %></td>
											<td class="text-center"><%= s.processing_status.to_s %></td>
										</tr>
										
									<% end %>
									
								</tbody>

							</table>
							
							<div class="will_paginate_container text-center">
								<%= will_paginate @sites, renderer: BootstrapPagination::Rails %>
							</div>
							
						</div>
					</div>
					
				</div>
			
			</div>
		
		</div>
	
</div>

